<!DOCTYPE html>
<html>
<head>
  <!-- //this is bootstrap cdn file path linking for alert message after login invalid pass etc  -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>My Website</title>
  <style>
    
    /* Navbar */
    .navbar {
      background-color: #000;
      color: #fff;
      padding: 10px;
      text-align: center;
      align-items: center;
    }
    .navbar a {
      color: #fff;
      text-decoration: none;
    }
    .navbar a:hover {
      color: #ddd;
    }

    /* Cards */
    .cards {
        display:flex;
      flex-wrap: nowrap;
    }
    .card {
      width: 100%;
      margin: 10px;
      border: 1px solid #ddd;
      padding: 10px;
      display:flex;
      flex-wrap: nowrap;
      flex-direction: column;
    }
    .card .title {
      font-size: 18px;
      font-weight: bold;
    }
    .card .subtitle {
      font-size: 16px;
    }
    .card .description {
      font-size: 12px;
      overflow:hidden;
    }
    .cardss{
      padding:40px;
      height: 90px;
      text-align:center;
      width:100%;

    }
  </style>
</head>
<body>
  <nav class="navbar">
    <h1><div><u>CMS</u></div></h1>
    <div>
     <% if(!currentUser){ %>
        <a href="/login">login</a>
    <a href="/register">Register</a>
     <% }else{%>
      <a href="/creatBlog">Add Blogs</a>
      <!-- <a href="/myBlogs">My Blogs</a> -->
      <a href="/logout">Logout</a>
      
    <div>
    <%}%>
  </nav>
  <!-- <h5><%-success%>  </h5> -->
  <div class="alert alert-warning alert-dismissible fade show" role="alert" id="alertDiv"><!--id chai aafai deko tala js ma use garnalai-->
    <%if(success){%>
      <strong><%-success%></strong>
    <%}else{%>
      <strong><%-error%></strong>
    <%}%>
    <!-- <strong><%-success%></strong>  -->
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
  </div>
  <div class="cards">  
        
    <%if(blogs.length==0){ %>
      <h1>No Blogs</h1>
    <%}else{%>
    <% blogs.forEach((blog)=>{%> 
    <div class="card">
      <h2 class="title"><%-blog.title%></h2>
      <h3 class="subtitle"><%-blog.subTitle%></h3>
      <img src="<%-blog.image %>" alt="" height="200px" width="200px">
      <p class="description"><%-blog.description%></p>
      <p class="description">Author : <%-blog.user.username%></p>  <!--join vara aako data of next joined table-->
      <p class="description">Email of author : <%-blog.user.email%></p>
      <a href="/single/<%-blog.id%>">See more</a>
    </div>
  
  </div>
   <% })%>
  <%}%>

<!-- /this is js forbuttons from bootstrpa  yo chai message flsh garda add gareko-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  <script>
    const alertDiv=document.getElementById("alertDiv") //var and id mathiko"""-->
      // alertDiv.addEventListener("click",()=>{  //yo cahi ttyosma click garo vne clicked vanera alert dine ho
      //   alert("clicked")
      // }) but we need afai 5 sec ma fade hune witoout pressing cross
  setTimeout(()=>{  //yesle chai hatauax tara kasari without eventlistener kam grdaixa so xaddine
    alertDiv.style.display="none"; //yo chai chaliraha xa tesaile xaddeko alik code structure xaina
  },3000);
  
  </script>

</body>
</html>